        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RocketDownload"
        mc:Ignorable="d"
        Title="Alert" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Icon="favicon.ico" Topmost="True" FontSize="14" Height="113.333" ShowInTaskbar="False">
