<Window x:Class="Nevis.LiveResults"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Nevis"
        mc:Ignorable="d"
        Title="Live Results" Height="300" Width="300" Icon="Assets/favicon.ico">
    <Grid>
        <TextBox x:Name="Results" Margin="10,40,10,10" TextWrapping="Wrap"/>
        <TextBlock x:Name="CourseName" Height="35" Margin="5,-5,5,0" TextWrapping="Wrap" Text="Course Name" VerticalAlignment="Top" FontSize="28" TextAlignment="Center" Visibility="Hidden" LineHeight="24"/>
        <TextBox x:Name="Courseentry" Height="20" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" ToolTip="Course for Live Results" Width="165" HorizontalAlignment="Left"/>
        <Button x:Name="Startliveresults" Content="Start (10 Sec)" Height="20" Margin="180,10,10.333,0" VerticalAlignment="Top" Click="Startliveresults_Click" BorderThickness="1"/>

    </Grid>
</Window>
